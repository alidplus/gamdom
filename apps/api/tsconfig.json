{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "NodeNext",
		"moduleResolution": "nodenext",
		"paths": {
      "@/*": ["./src/*"]
		}
  },
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
  "include": ["src/**/*", "express.d.ts"],
  "exclude": ["node_modules", "dist"]
} 